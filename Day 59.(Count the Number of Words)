// Day 59.(Count the Number of Words)

#include <iostream>
using namespace std;
int main(){
    string str = "abc def ghi tyu";
    int count =0;
    if(str.length()>0){
        count = 1;
    }
    for(int i=0;i<str.length();i++){
        if(int(str[i])==9 || int(str[i])==32){
            count++;
        }
    }
    cout<<"No. of words in the given string are: "<< count;
    return 0;
}
